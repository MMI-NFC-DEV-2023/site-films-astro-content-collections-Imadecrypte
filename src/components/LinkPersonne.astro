---
import type { ActionClient } from 'astro:actions';
import type { CollectionEntry } from 'astro:content';

interface Props {
    personne: CollectionEntry<"personne">;
}
const { personne } = Astro.props;
---
{personne ? (
    <a href={`/personne/${personne.id}`}>
        {personne.data.nom}
    </a>
) : <span>Personne introuvable</span>}